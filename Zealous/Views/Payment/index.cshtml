@model  Zealous.Models.Product
@{
//Layout = ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        Add products
    </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>Checkout example for Bootstrap</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/checkout/">

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="form-validation.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

          

  
 

  


            <div class="form-group">
                <label for="item_name">
                    Product's name
                </label>
                @Html.TextBoxFor(x => x.item_name, new { @class = "form-control", placeholder = "Product's name" })
                @Html.ValidationMessageFor(x => x.item_name)
            </div>

            <div class="form-group">
                <label for="item_number">Product code</label>
                @Html.TextBoxFor(x => x.item_number, new { @class = "form-control", placeholder = "Product code" })
                @Html.ValidationMessageFor(x => x.item_number)
            </div>

            <div class="form-group">
                <label for="amount">Product price</label>
                @Html.TextBoxFor(x => x.amount, new { @class = "form-control", placeholder = "Product price" })
                @Html.ValidationMessageFor(x => x.amount)
            </div>

            <div class="form-group">
                <label for="quantity">Number of products</label>
                @Html.TextBoxFor(x => x.quantity, new { @class = "form-control", placeholder = "Number of products" })
                @Html.ValidationMessageFor(x => x.quantity)
            </div>
            <button type="submit" class="btn btn-success">
                Add to cart
            </button>
        }
    </div>
    <div class="col-md-12">
        @Html.ActionLink("Pay", "index", new { controller = "Paypal" }, new { @class = "btn btn-primary" })
    </div>
  
</body>
</html>
