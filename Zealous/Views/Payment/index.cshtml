@using System.Configuration
@using Zealous.Models;
@model  List<Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <form action="@ConfigurationManager.AppSettings["urlSubmitPayment"]">
            <input type="hidden" name="cmd" value="_cart" />
            <input type="hidden" name="upload" value="1" />
            <input type="hidden" name="return" value="@ConfigurationManager.AppSettings["urlReturn"]" />
            <input type="hidden" name="business" value="@ConfigurationManager.AppSettings["accountBusiness"]" />
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" name="@Url.Content("item_name_"+(i+1))" value="@Model[i].Item_name" />
                <input type="hidden" name="@Url.Content("item_number_"+(i+1))" value="@Model[i].Item_number " />
                <input type="hidden" name="@Url.Content("amount_"+(i+1))" value="@Model[i].Amount" />
            }
            <br />

            <div class="container">
                <table id="cart" class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th style="width:50%">Item Name</th>
                            <th style="width:20%">Item Number</th>
                            <th style="width:20%" class="text-center">Price</th>
                        </tr>
                    </thead>

                    @foreach (var cart in Model)

                    {
                        <tr>
                            <td data-th="Product">
                                <div class="row">

                                    <div class="col-sm-10">
                                        <h4 class="nomargin">@cart.Item_name</h4>

                                    </div>
                                </div>
                            </td>
                            <td data-th="Item Number">@cart.Item_number</td>

                            <td data-th="Price" class="text-center">@cart.Amount</td>
                            <td colspan="3"></td>
                            <td class="actions" data-th="">
                                @Html.ActionLink("Delete", "Delete", "Payment",  htmlAttributes: new { @class = "btn btn-danger btn-sm", @role = "button" })
                            </td>
                        </tr>
                        <tr></tr>
                    }





                    <div class="col-md-12">

                        <tr>
                            <td><a href="#" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                            <td colspan="3"></td>

                            <label for="paypal" class="method paypal">


                                <div>

                                    <td>

                                        <input type="submit" value="Checkout Now" class="btn btn-primary col-md-12" />
                                        <br>
                                        <br>

                                        <img src="~/image/paypal_logo.png" />
                                    </td>

                                </div>

                            </label>
                        </tr>

                    </div>
                </table>

            </div>






</body>
</html>
