@model Zealous.Models.Event
@{
//Layout = ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        EVENT PICKING
    </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


 <!-- Page Content -->
        <div class="container">
            <div class="col-sm-6">
                <h4 class="top-title">
                    Reserve Your Event Online
                </h4>
                <p class="top-text">Reserving your event is easy and fast.</p>
                <div class="row col-lg-12">
                    <select class="form-control">
                        <option>Select A Date</option>
                        <option>Today</option>
                        <option>Tomorrow</option>
                        <option>This Saturday</option>
                        <option>Tuesday</option>
                    </select>
                    @*<button type="button" data-toggle="dropdown" class="btn btn-buy dropdown-toggle">Book <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a ahref="#"><input type="button" class="btn btn-buy" onclick="location.href='/Home/Buy';" value="Book" /></a></li>
                            <li><a ahref="#"><input type="button" class="btn btn-buy" onclick="location.href='/Home/Buy';" value="Book" /></a></li>
                        </ul>*@
                    <div class="row col-lg-12">
                        <div class="">
                            <input type="button" class="btn btn-buy" onclick="location.href='/Home/Reserve';" value="Book" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <h4 class="top-title">
                    CHOOSE PACKAGE
                </h4>
                <p class="top-text">the ulitmate event package.</p>
                <div class="row col-lg-12">
                    <select class="form-control">
                        <option>Select A PACKAGe</option>
                        <option>Wedding package</option>
                        <option>Baby Shower package</option>
                        <option>Engagement package</option>
                        <option>Meeting package</option>
                    </select>
                    <select class="form-control">
                        <option>Select A Time</option>
                        <option>Breakfast</option>
                        <option>Lunch</option>
                        <option>Dinner</option>
                        <option>Supper</option>
                    </select>

                    <div class="row col-lg-12">
                        <div class="">
                            <input type="button" class="btn btn-buy" onclick="location.href='/Home/Buy';" value="Book" />
                        </div>
                    </div>
                </div>
            </div>
        </div>  <!-- End Container -->

        <div class="form-group">
            <label for="item_name">
                Product's name
            </label>
            @Html.TextBoxFor(x => x.EventName, new { @class = "form-control", placeholder = "Product's name" })
            @Html.ValidationMessageFor(x => x.EventName)
        </div>

        <div class="form-group">
            <label for="item_number">Product code</label>
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control", placeholder = "Product code" })
            @Html.ValidationMessageFor(x => x.Id)
        </div>

        <div class="form-group">
            <label for="amount">Product price</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Product price" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>

       
        <button type="submit" class="btn btn-success">
            Add to cart
        </button>
        }
    </div>
    <div class="col-md-12">
        @Html.ActionLink("Proceed", "index", new { controller = "Payment" }, new { @class = "btn btn-primary" })
    </div>

</body>
</html>
